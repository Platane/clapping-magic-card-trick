{
    "name"              : "js1k-2017",
    "version"           : "0.1.0",

    "dependencies"      : {
        "refinery-js"           : "~0.6.0",
        "redux"                 : "~3.6.0",
        "react-redux"           : "~5.0.2",
        "react"                 : "~15.4.0",
        "js-emoji-fork"         : "~1.0.0",
        "react-dom"             : "~15.4.0"
    },

    "devDependencies"   : {
        "babel-core"            : "~6.23.0",
        "babel-cli"             : "~6.23.0",

        "jscrush"               : "~0.0.0",

        "webpack"               : "~2.2.0",
        "webpack-dev-server"    : "~2.3.0",
        "follow-redirects"      : "~1.2.1",
        "html-minify-loader"    : "~1.1.0",
        "file-loader"           : "~0.10.0",
        "style-loader"          : "~0.13.0",
        "css-loader"            : "~0.26.0",
        "html-loader"           : "~0.4.3",
        "raw-loader"            : "~0.5.1",
        "babel-loader"          : "~6.3.0",
        "postcss-loader"        : "~1.3.0",
        "postcss-import"        : "~9.1.0",
        "postcss-simple-vars"   : "~3.0.0",
        "autoprefixer"          : "~6.7.2",
        "babel-preset-es2015"   : "~6.22.0",
        "babel-preset-react"    : "~6.23.0",
        "babel-preset-stage-1"  : "~6.22.0",
        "babel-preset-babili"   : "~0.0.11",
        "babel-plugin-replace-identifiers" : "~0.1.0"
    },

    "scripts"           : {
        "build"                 : "rm -rdf dist/ && mkdir dist && cp src/* dist && env BABEL_ENV=minify babel src/index.js | node ./replaceEmoji.js | jscrush 1> dist/index.js && stat -c%s dist/index.js",
        "start"                 : "webpack-dev-server --port 8082 --inline --devtool source-map --content-base ./ -d",
        "doc:start"             : "env SOURCE_URL=\"http://localhost:8083\" webpack-dev-server --port 8084 --inline --devtool source-map --content-base ./ -d --config ./doc/webpack.config.babel.js",
        "doc:build"             : "rm -rdf doc/dist/ && env NODE_ENV=production webpack --config ./doc/webpack.config.babel.js"
    }
}
